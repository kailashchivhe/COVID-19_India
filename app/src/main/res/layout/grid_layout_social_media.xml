<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="5dp"
        android:layout_weight="0.25"
        tools:ignore="NestedWeights">

        <RelativeLayout
            android:id="@+id/media_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp">

            <ImageView
                android:id="@+id/social1_imageview"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="2dp"
                android:src="@drawable/media" />

            <TextView
                android:id="@+id/social1_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/social1_imageview"
                android:layout_centerHorizontal="true"
                android:padding="2dp"
                android:text="MEDIA" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="5dp"
        android:layout_weight="0.25">

        <RelativeLayout
            android:id="@+id/facebook_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:padding="2dp">

            <ImageView
                android:id="@+id/social2_imageview"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="2dp"
                android:src="@drawable/facebook" />

            <TextView
                android:id="@+id/social2_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/social2_imageview"
                android:layout_centerHorizontal="true"
                android:padding="2dp"
                android:text="FACEBOOK" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="5dp"
        android:layout_weight="0.25">

        <RelativeLayout
            android:id="@+id/twitter_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:padding="2dp">

            <ImageView
                android:id="@+id/social3_imageview"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="2dp"
                android:src="@drawable/twitter" />

            <TextView
                android:id="@+id/social3_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/social3_imageview"
                android:layout_centerHorizontal="true"
                android:padding="2dp"
                android:text="TWITTER" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="5dp"
        android:layout_weight="0.25">

        <RelativeLayout
            android:id="@+id/email_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:padding="2dp">

            <ImageView
                android:id="@+id/social4_imageview"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="2dp"
                android:src="@drawable/email" />

            <TextView
                android:id="@+id/social4_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/social4_imageview"
                android:layout_centerHorizontal="true"
                android:padding="2dp"
                android:text="EMAIL" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>